<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.fudges.server.business.user.mapper.UserModuleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.fudges.server.business.user.entity.UserModule">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="module_id" property="moduleId" />
        <result column="sort" property="sort" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, module_id, sort
    </sql>

    <resultMap id="extendResultMap" type="cn.fudges.server.business.user.entity.UserModule" extends="BaseResultMap">
        <result column="name" property="name"/>
    </resultMap>

    <select id="queryUserModuleList" resultMap="extendResultMap">
        SELECT
            um.*, mi.name
        FROM
            user_module um, module_info mi
        WHERE
            um.module_id = mi.id
        AND um.user_id = #{userId}
        ORDER BY
            um.sort, mi.sort, mi.id
    </select>
</mapper>
